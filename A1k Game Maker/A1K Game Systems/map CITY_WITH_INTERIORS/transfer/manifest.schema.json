{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TransferManifest",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "basePath": { "type": "string" },
    "collisionRects": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "x": { "type": "number" },
          "y": { "type": "number" },
          "width": { "type": "number" },
          "height": { "type": "number" }
        },
        "required": ["x", "y", "width", "height"]
      }
    },
    "player": {
      "type": ["object", "null"],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string" },
        "x": { "type": "number" },
        "y": { "type": "number" },
        "sprite": { "type": "string" },
        "speed": { "type": "number" },
        "layer": { "type": ["number", "string"] },
        "group": { "type": "string" }
      },
      "required": ["id", "x", "y"]
    },
    "npcs": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string" },
          "x": { "type": "number" },
          "y": { "type": "number" },
          "sprite": { "type": "string" },
          "name": { "type": "string" },
          "dialogue": { "type": "string" },
          "layer": { "type": ["number", "string"] },
          "group": { "type": "string" }
        },
        "required": ["id", "x", "y"]
      }
    },
    "houses": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string" },
          "x": { "type": "number" },
          "y": { "type": "number" },
          "width": { "type": "number" },
          "height": { "type": "number" },
          "label": { "type": "string" },
          "interiorManifest": { "type": "string" },
          "layer": { "type": ["number", "string"] },
          "group": { "type": "string" }
        },
        "required": ["id", "x", "y"]
      }
    }
  }
}


